@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

<h2>User Management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
}
else
{
    <table class="table table-condensed table-bordered" header header-content="User Management">
        <tr>
            <td class="hidden">User Id</td>
            <td>Username</td>
            <td>First Name</td>
            <td>Surname</td>
            <td>Email</td>
            <td>Actions</td>
        </tr>
        @foreach (var user in Model)
        {
        <tr>
            <td class="hidden">@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <button type="submit" onclick="return confirm('Are u sure?')" class="btn btn-sm btn-primary">Delete</button>
                </form>
            </td>
        </tr>
        }
    </table>
}
<a class="btn btn-primary" asp-action="AddUser">Add new user</a>


